<div class="row">
	<div class="col-sm-10 col-sm-offset-1 col-xs-12 col-xs-offset-0">
		<h2>Users:</h2>
		<% @user_results.each do |user| %>
			<div class="user_result">
				<h3><%= user.display_name %></h3>
				<p><%= Post.where(user_id: user.id).count %> posts, <%= Comment.where(user_id: user.id).count %> comments</p>
				<div class="user-photo-box"><img class="user-photo" src="<%= user.photo_url %>"></div>
			</div>
		<% end %>
		<h2>Posts:</h2>
		<% @post_results.each do |post| %>
			<div class="post-result">
				<h3><%= post.title %></h3>
				<p>Posted by <%= User.find(post.user_id).display_name %></p>
				<div class="user-photo-box"><img class="user-photo" src="<%= User.find(post.user_id).photo_url %>"></div>
			</div>
		<% end %>
	</div>
</div>