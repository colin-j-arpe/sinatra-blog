<h2>My profile:</h2>
<p><h3>On-screen name: </h3><%= @user.display_name %></p>
<p><h3>Log-in ID: </h3><%= @user.login_name %></p>
<p><h3>eMail address: </h3><%= @user.email %></p>
<button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#edit-profile-modal">Edit Profile</button>
<button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#change-password-modal">Change password</button>

<h2>My posts:</h2>
<% @posts.each do |post| %>
	<a href="/posts/<%= post.id %>"><h4><%= post.title %></h4></a>
	<p><%= post.content %></p>
<% end %>

<div id="edit-profile-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Edit user profile</h4>
			</div>
			<div class="modal-body">
				<form method="POST" action="/users/edit">
					<label for="display_name">On-screen display name</label>
					<input type="text" name="display_name"><br>
					<label for="login_name">Login ID</label>
					<input type="text" name="login_name"><br>
					<label for="email">eMail address</label>
					<input type="email" name="email"><br>
					<label>Link to profile photo</label>
					<input type="text" name="photo_url"><br>
					<p>Note: image will be stretched, not cropped, to a square.</p>
					<button type="submit">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>
<div id="change-password-modal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Change password</h4>
			</div>
			<div class="modal-body">
				<form method="POST" action="/users/password">
					<input type="password" name="old_password" required><br>
					<input type="password" name="new_password" required><br>
					<input type="password" name="new_password_confirm" required><br>
					<button type="submit">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>