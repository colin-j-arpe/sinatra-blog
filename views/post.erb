<h2><%= @post.title %></h2>
<%= @post.embed %>
<p><%= @post.content %></p>
<% if @post.user_id == @user.id %>
	<a href="/posts/<%= @post.id %>/delete" class="btn btn-danger" role="button">Delete post</a>
<% end %>

<% if @comments.length > 0 %>
	<h3>Comments:</h3>
<% end %>
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#new-comment-modal">Add comment</button>

<% @comments.each do |comment| %>
	<% if @user.admin || comment.approved %>
		<h4><%= User.find(comment.user_id).display_name %> says:</h4>
		<p><%= comment.content %></p>
		<% if comment.user_id == @user.id %>
			<button type="button" class="btn btn-info btn-sm" href="/comments/<%= comment.id %>/delete">Delete comment</button>
		<% end %>
		<% if @user.admin %>
			<% if comment.approved %>
				<button type="button" class="btn btn-info btn-sm">Disapprove comment</button>
			<% else %>
				<button type="button" class="btn btn-info btn-sm">Approve comment</button>
			<% end %>
		<% end %>
	<% end %>
<% end %>

<div id="new-comment-modal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/comment/create">
					<label for="content">Your comment:</label>
					<input type="text" name="content">
					<input type="hidden" name="user_id" value="<%= @user.id %>">
					<input type="hidden" name="post_id" value="<%= @post.id %>">
					<button>Hear me roar!</button>
				</form>
			</div>
		</div>
	</div>
</div>